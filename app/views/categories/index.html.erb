<h1>Categorías</h1>

<table>
<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><span uk-icon="icon: tag"></span>&nbsp;<%= link_to category.nombre, category, :class => 'uk-button uk-button-text' %>&nbsp&nbsp&nbsp&nbsp</td>
      <td>&nbsp&nbsp&nbsp&nbsp<span uk-icon="icon: cog"></span>&nbsp; <%= link_to 'Editar', edit_category_path(category), :class => 'uk-button uk-button-text' %>&nbsp&nbsp| </td>
      <td>&nbsp&nbsp<span uk-icon="icon: trash"></span>&nbsp; <%= link_to 'Eliminar', category,:class => 'uk-button uk-button-text', method: :delete, data: { confirm: 'Seguro?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br>
<span uk-icon="icon: plus"></span>&nbsp;<%= link_to 'Nueva categoría', new_category_path, :class => 'uk-button uk-button-text' %>
