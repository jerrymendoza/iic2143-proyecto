<h1>Matchers</h1>

<div class="matching">

  <% @matchers.each_with_index do |matcher, index| %>
    <div class="uk-card uk-card-large item uk-card-default <%=  'as' if index != 0 %>" >
    
        <div class="card-img">
          <% if matcher.imagen.attached? %>
                <image src="<%=(url_for(matcher.imagen))%>"/>
          <% end %>
        </div>

        <div class="">
        <h4><%= matcher.nombre %></h4>
        </div>

      <%= button_to 'Like', {:controller => "likes", 
      :action => "create", 
      :matcher => matcher 
      } ,:method=>:post, 
      :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom'
       %>
    </div>
    <% end %>
  

</div>

