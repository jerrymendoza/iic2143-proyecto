<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Contraseña %> <i>(Dejar en blanco si no queires cambiar)</i><br />
    <%= f.password_field :password, autocomplete: "Nueva contraseña" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Confirmación_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nueva contraseña" %>
  </div>

  <div class="field">
    <%= f.label :edad %>
    <%= f.number_field :edad %>
  </div>

  <div class="field">
    <%= f.label :rut %>
    <%= f.text_field :rut %>
  </div>

  <div class="field">
    <%= f.label :imagen %>
    <%= f.file_field :imagen %>
  </div>

  <div class="field">
    <%= f.label :telefono %>
    <%= f.text_field :telefono %>
  </div>

  <div class="field">
    <%= f.label :comuna %>
    <%= f.collection_select(:comuna_id, @comunas, :id, :name, {:prompt => 'Seleccionar Comuna'}) %>
  </div>

  <ul uk-accordion>
    <% @categories.each do |category| %>
      <li class="uk-open">
        <a class="uk-accordion-title" href="#"><%= category.nombre %></a>
        <div class="uk-accordion-content">
        <% category.gustos.each do |gusto| %>
          <div>
            <% tiene_gusto = resource.gustos.include? gusto %>
            <%= check_box_tag "gustos_ids[]", gusto.id, checked = tiene_gusto %>
            <%= gusto.titulo %>
          </div>
        <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion %>
  </div>

  <div class="field">
    <%= f.label :genero %>
    <%= f.select(:genero, ['Hombre', 'Mujer'], {:prompt => 'Seleccionar Género'}) %>
  </div>


  <div class="field">
    <%= f.label :Contraseña_actual %> <i>(Necesitamos tu contraseña actual para realizar cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "Contraseña actual" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>¿No estas a gusto? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Seguro?" }, method: :delete %></p>

<%= link_to "Volver", :back, :class => 'uk-button uk-button-text' %>
