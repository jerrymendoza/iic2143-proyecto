<h1>Mis Locales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Comuna</th>
      <th>Direccion</th>
      <th>Descripcion</th>
      <th>Aceptado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals_de_propietario_local.each do |local| %>
      <tr>
        <td><%= local.nombre %></td>
        <td><%= local.comuna.name if not local.comuna.nil? %></td>
        <td><%= local.direccion %></td>
        <td><%= local.descripcion %></td>
        <td><%= local.aceptado %></td>
        <td><%= link_to 'Detalles', local %></td>
        <td><%= link_to 'Editar', edit_local_path(local) %></td>
        <td><%= link_to 'Eliminar', local, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if propietario_local_signed_in? %>
  <%= link_to 'Nuevo local', new_local_path %>
<% end %>
