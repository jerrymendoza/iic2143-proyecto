<h1>Mis Locales</h1>

<div class="uk-grid-small uk-child-width-expand@s" uk-grid uk-position-relative>
<% @locals_de_propietario_local.each do |local| %>
  <div class="uk-grid-small uk-grid-divider uk-child-width-auto" uk-grid>
  <div class="uk-card uk-card-default uk-width-1-3">
      <div class="uk-card-header">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
              <div class="uk-width-auto">
                <% if local.imagen.attached? %>
                  <img class="uk-border-circle" width="80" height="80" src=<%=(url_for(local.imagen))%>>
                <% end %>
              </div>
              <div class="uk-width-expand">
                  <h3 class="uk-card-title uk-margin-remove-bottom"><%= local.nombre %></h3>
                  <p class="uk-text-meta uk-margin-remove-top"><%= local.direccion %></p>
              </div>
          </div>
      </div>
      <div class="uk-card-body">
          <p><%= local.descripcion %></p>
      </div>
      <div class="uk-card-footer">
        <%= link_to 'Detalles', local,
          :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom' %>
        <%= link_to 'Editar', edit_local_path(local), :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom'  %>
        <%= link_to 'Eliminar', local, method: :delete, :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom', data: { confirm: 'Seguro?'} %>
      </div>
  </div>
</div>
  <br>
  </div>
  &nbsp; &nbsp; &nbsp; &nbsp;
<% end %>
</div>

<br>
<% if propietario_local_signed_in? %>
  <span uk-icon="icon: plus"></span> &nbsp; &nbsp;<%= link_to 'Nuevo local', new_local_path, :class => 'uk-button uk-button-text' %>
<% end %>
</br>
