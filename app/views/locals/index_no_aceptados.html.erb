
<h1>Solicitudes de locales</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @locals_no_aceptados.each do |local| %>
        <tr>
          <div class="uk-card-small uk-grid-collapse uk-child-width-auto@s" uk-grid>
          <div class="uk-card-body">
              <% if local.imagen.attached? %>
                <image class="uk-border-circle" width="160" height="160" src="<%=(url_for(local.imagen))%>"  >
              <% else %>
                <image class="uk-border-circle" width="160" height="160" src="<%= asset_path 'default-matcher-image.png' %>">
              <% end %>
          </div>
          <div>
              <div class="uk-card-body">
                  <h3 class="uk-card-title"><span uk-icon="icon: location"></span>&nbsp;<%= local.nombre %></h3>
                  <p><span uk-icon="icon: world"></span>&nbsp;<%= local.comuna.name if not local.comuna.nil? %></p>
                  <p><span uk-icon="icon: location"></span>&nbsp;<%= local.direccion %></p>
                  <p><span uk-icon="icon: comment"></span>&nbsp;<%= local.descripcion %></p>

              </div>
          </div>
          <div>
              <div class="uk-card-body">
                  <h3 class="uk-card-title"> Acciones </h3>
                  <p><span uk-icon="icon: info"></span>&nbsp;<%= link_to 'Detalles', local, :method => :get, :class => 'uk-button uk-button-text' %></p>
                  <p><span uk-icon="icon: check"></span>&nbsp;<%= link_to 'Aceptar', {:controller => "locals", :action => "enviar_aceptar_local", :id => local }, :method => :patch, remote: true, :class => 'uk-button uk-button-text' %></p>
                  <p><span uk-icon="icon: close"></span>&nbsp;<%= link_to 'Rechazar', local, method: :delete, data: { confirm: 'Â¿Seguro quieres rechazar este local?' }, :class => 'uk-button uk-button-text'%></p>
              </div>
          </div>
          </div>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
