
<h1>Solicitudes de locales</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Comuna</th>
        <th>Direccion</th>
        <th>Descripcion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @locals_no_aceptados.each do |local| %>
        <tr>
          <td><%= local.nombre %></td>
          <td><%= local.comuna.name if not local.comuna.nil? %></td>
          <td><%= local.direccion %></td>
          <td><%= local.descripcion %></td>
          <td><%= button_to 'Detalles', local, :method => :get, :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom' %></td>
          <td><%= button_to 'Aceptar', {:controller => "locals", :action => "enviar_aceptar_local", :id => local }, :method => :patch, remote: true, :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom' %></td>
          <td><%= button_to 'Rechazar', local, method: :delete, data: { confirm: 'Â¿Seguro quieres rechazar este local?' }, :class => 'uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>