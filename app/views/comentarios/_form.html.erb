<%= form_for([@local,@comentario], remote: true) do |form| %>
  <% if @comentario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comentario.errors.count, "error") %> se prohibio guardar este comentario:</h2>

      <ul>
      <% @comentario.errors.full_messages.each do |message| %>
        <li><%= mensaje %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :valoracion %>
    <%= form.number_field :valoracion %>
  </div>

  <div class="field">
    <%= form.label :contenido %>
    <%= form.text_area :contenido %>
  </div>

  <div class="actions">
    <%= form.submit "Comentar" %>
  </div>
<% end %>
