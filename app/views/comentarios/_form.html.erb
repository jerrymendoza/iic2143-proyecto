<%= form_for([@local,@comentario], remote: true) do |form| %>
  <% if @comentario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comentario.errors.count, "error") %> se prohibio guardar este comentario:</h2>

      <ul>
      <% @comentario.errors.full_messages.each do |message| %>
        <li><%= mensaje %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <span uk-icon="icon: star"></span>&nbsp;&nbsp;<%= form.label :valoracion, "Valoración" %>
    <%= form.select(:valoracion, [1, 2, 3, 4, 5], {:prompt => 'seleccionar valoración'},  :class => 'uk-select')  %>
  </div>

  <div class="field">
    <span uk-icon="icon: comment"></span>&nbsp;&nbsp;<%= form.label :contenido, "Contenido" %>
    <%= form.text_area :contenido, :class => 'uk-width-2 uk-textarea' %>
  </div>

  <div class="actions">
    <%= form.submit "comentar" , class: 'uk-button uk-button-primary'%>
  </div>
<% end %>
