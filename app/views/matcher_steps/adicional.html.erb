<h2>Agrega tus datos!</h2>

<%= form_for @matcher, url: wizard_path, method: :put do |f| %>

  <div class="field">
    <%= f.label :imagen %></br>
    <%= f.file_field :imagen %>
  </div>

  <div class="field">
    <%= f.label :edad %></br>
    <%= f.number_field :edad, :class => 'uk-input uk-width-1-3' %>
  </div>

  <div class="field">
    <%= f.label :comuna, "¿Donde vives?" %></br>
    <%= f.collection_select(:comuna_id, @comunas, :id, :name, {:prompt => 'Seleccionar Comuna'}, :class => 'uk-input uk-width-1-3') %>

  <div class="field">
    <%= f.label :genero %></br>
    <%= f.select(:genero, ['Hombre', 'Mujer'], {:prompt => 'Seleccionar Género'}, :class => 'uk-input uk-width-1-3') %>
  </div>

  <div class="field">
    <%= f.label :rut %></br>
    <%= f.text_field :rut, :class => 'uk-input uk-width-1-3' %>
  </div>

  <div class="field">
    <%= f.label :telefono %></br>
    <%= f.text_field :telefono, :class => 'uk-input uk-width-1-3' %>
  </div>

  <div class="field">
    <%= f.label :descripcion %></br>
    <%= f.text_area :descripcion, :class => 'uk-input uk-width-1-3' %>
  </div>

  <div class="field">
    Gustos
  </div>

  <ul uk-accordion>
    <% @categories.each do |category| %>
      <li class="uk-close">
        <a class="uk-accordion-title" href="#"><%= category.nombre %></a>
        <div class="uk-accordion-content">
        <% category.gustos.each do |gusto| %>
          <div>
            <%= check_box_tag "gustos_ids[]", gusto.id %>
            <%= gusto.titulo %>
          </div>
        <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit "Finalizar", class: 'uk-button uk-button-primary' %>
  </div>
<% end %>