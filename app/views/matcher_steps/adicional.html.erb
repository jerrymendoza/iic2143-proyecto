<h2>Agrega tus datos!</h2>

<%= form_for @matcher, url: wizard_path, method: :put do |f| %>

	<div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>

	<div class="field">
    <%= f.label :edad %>
    <%= f.number_field :edad %>
  </div>

  <div class="field">
    <%= f.label :rut %>
    <%= f.text_field :rut %>
  </div>

  <div class="field">
    <%= f.label :imagen %>
    <%= f.file_field :imagen %>
  </div>

  <div class="field">
    <%= f.label :telefono %>
    <%= f.text_field :telefono %>
  </div>

  <div class="field">
    <%= f.label :comuna %>
    <%= f.collection_select(:comuna_id, @comunas, :id, :name, {:prompt => 'Seleccionar Comuna'}) %>
  </div>

  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion %>
  </div>

  <div class="field">
    <%= f.label :genero %>
    <%= f.select(:genero, ['Hombre', 'Mujer'], {:prompt => 'Seleccionar GÃ©nero'}) %>
  </div>

  <ul uk-accordion>
    <% @categories.each do |category| %>
      <li class="uk-open">
        <a class="uk-accordion-title" href="#"><%= category.nombre %></a>
        <div class="uk-accordion-content">
        <% category.gustos.each do |gusto| %>
          <div>
            <%= check_box_tag "gustos_ids[]", gusto.id %>
            <%= gusto.titulo %>
          </div>
        <% end %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>