<h1>Gustos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @gusto.each do |gusto| %>
      <tr>
        <td><%= gusto.titulo %></td>
        <td><%= gusto.descripcion %></td>
        <td><%= link_to 'Ver detalles', gusto_path(gusto.id), :class => 'uk-button uk-button-text'%></td>
      </tr>
    <%end%>
  </tbody>
</table>

