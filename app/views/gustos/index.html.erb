<h1>Gustos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Categor√≠a</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @gusto.each do |gusto| %>
      <tr>
