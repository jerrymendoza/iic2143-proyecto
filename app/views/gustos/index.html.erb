<h1>Gustos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Categoría</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @gusto.each do |gusto| %>
      <tr>
        <td><%= gusto.titulo %></td>
        <td><%= gusto.category %></td>
        <td><%= link_to 'Ver detalles', gusto_path(gusto.id)%></td>
      </tr>
    <%end%>
  </tbody>
</table>

<br>



<%= link_to 'Añadir Gusto', gustos_new_path, :class => 'uk-button uk-button-text' %>
